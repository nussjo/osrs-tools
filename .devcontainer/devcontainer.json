{
    "name": "OSRS tools (dev container)",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools-extension-pack",
                "matepek.vscode-catch2-test-adapter",
                "actboy168.tasks",
                "twxs.cmake",
                "ms-vscode.cpptools-themes",
                "jeff-hykin.better-dockerfile-syntax",
                "ms-python.python"
            ]
        }
    }
}
